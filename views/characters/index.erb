<div class="container">
  <div class="row">
    <% @characters.each do |character| %>
      <div class="col-md-4 space">
        <h1><%= character.name %></h1>
        <p><%= "<strong>Signature Attack: </strong>" + character.signature %></p>
        <p><%= "<strong>Arc of origin: </strong>" + character.arc %></p>
        <form action="/<%= character.id %>" method="GET">
          <input class="button" type="submit" value="<%= character.name %>'s Page">
        </form>
      </div>
    <% end %>
  </div>
</div>
