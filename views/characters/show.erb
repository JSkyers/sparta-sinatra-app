<div class="container">
  <div class="row">
    <div class="space">
      <h1><%= @character.name %></h1>
      <p><%= "<strong>Signature Attack: </strong>" + @character.signature %></p>
      <p><%= "<strong>Arc of origin: </strong>" + @character.arc %></p>

      <form action="/<%= @character.id %>/edit" method="GET">
        <input class="button"type="submit" value="Edit Character">
      </form>

      <form action="/<%= @character.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input class="button"type="submit" value="Delete">
      </form>
    </div>
  </div>
</div>
